keybind "<Shift><Alt>3" move "3"
keybind "<Shift><Alt>4" move "4"
keybind "<Shift><Alt>5" move "5"
keybind "<Shift><Alt>6" move "6"
keybind "<Shift><Alt>7" move "7"
